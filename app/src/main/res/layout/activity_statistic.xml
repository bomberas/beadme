<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="it.polimi.group03.activity.SettingsActivity">

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_horizontal|top">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/linearLayout"
            android:layout_gravity="center_horizontal|bottom">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_home"
                android:layout_gravity="center|bottom"
                android:contentDescription="@string/ic_home_desc"

                app:backgroundTint="#840031" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Statistics"
            android:id="@+id/stats"
            android:layout_gravity="center_horizontal|top"
            android:textStyle="bold"
            android:textColor="#d0486a" />

        <GridLayout
            android:layout_width="321dp"
            android:layout_height="343dp"
            android:columnCount="6"
            android:rowCount="12"
            android:id="@+id/gridLayout"
            android:orientation="horizontal"
            android:layout_gravity="left|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Total games played"
                android:id="@+id/total_rounds"
                android:layout_row="1"
                android:layout_column="1"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="251dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Longest Game"
                android:id="@+id/longest_game"
                android:layout_row="2"
                android:layout_column="1"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_row="2"
                android:layout_column="5" />

            <TextView
                android:layout_width="251dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Shortest Game"
                android:id="@+id/shortest_game"
                android:layout_row="3"
                android:layout_column="1"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_row="3"
                android:layout_column="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Top 10 players"
                android:id="@+id/textView"
                android:layout_row="4"
                android:layout_column="1"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Longest time surviver"
                android:id="@+id/longest_time_surviver"
                android:layout_row="5"
                android:layout_column="1"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText5"
                android:layout_row="5"
                android:layout_column="5"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_row="1"
                android:layout_column="5" />

        </GridLayout>

    </FrameLayout>

</FrameLayout>