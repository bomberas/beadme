<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?backgroundStyle"
    tools:context="it.polimi.group03.activity.HelpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_statistic"
                android:contentDescription="@string/app_icon"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Statistics"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                style="?aboutStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_weight="0.07">

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewFlipper"
                android:layout_weight=".65">



                    <GridLayout
                        android:layout_width="321dp"
                        android:layout_height="191dp"
                        android:columnCount="6"
                        android:rowCount="16"
                        android:id="@+id/gridLayout"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginTop="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Total games played"
                            android:id="@+id/games_played"
                            android:layout_row="1"
                            android:layout_column="1"

                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            style="?aboutStyle"/>

                        <TextView
                            android:layout_width="251dp"
                            android:layout_height="40dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Last game&apos;s duration"
                            android:id="@+id/duration"
                            android:layout_row="2"
                            android:layout_column="1"

                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            style="?aboutStyle"/>

                        <EditText
                            android:layout_width="46dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/et_duration"
                            android:layout_row="2"
                            android:layout_column="5" />

                        <TextView
                            android:layout_width="251dp"
                            android:layout_height="40dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Total rounds"
                            android:id="@+id/total_rounds"
                            android:layout_row="3"
                            android:layout_column="1"

                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            style="?aboutStyle"/>

                        <EditText
                            android:layout_width="37dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/et_total_rounds"
                            android:layout_row="3"
                            android:layout_column="5" />

                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/et_games_played"
                            android:layout_row="1"
                            android:layout_column="5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Swipe if you like swipping"
                            android:id="@+id/curious_george"
                            android:layout_row="15"
                            android:layout_column="1"
                            style="?aboutStyle"/>

                    </GridLayout>

                <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.80"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Players"
                android:id="@+id/players"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="46dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Victories"
                android:id="@+id/victories"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="54dp" />
        </RelativeLayout>



            </ViewFlipper>

        </LinearLayout>



                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:id="@+id/imageView"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_statistic" />
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:id="@+id/btn_help_home"
                    android:layout_gravity="center|bottom"
                    android:contentDescription="@string/ic_home_desc"
                    android:src="@drawable/ic_home"
                    style="?floatingButtonStyle"/>



</LinearLayout>
</FrameLayout>