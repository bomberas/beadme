<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="it.polimi.group03.activity.SettingsActivity">

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="10"
            android:id="@+id/gridLayout"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <SeekBar
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/sb_sound"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tv_sound_text"
                android:id="@+id/tv_sound"
                android:layout_row="1"
                android:layout_column="1"
                android:labelFor="@id/sb_sound"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/img_sound"
                android:layout_row="1"
                android:layout_column="0"
                android:src="@drawable/ic_speaker"
                android:contentDescription="@string/img_sound_desc"
                android:layout_margin="5dp" />

            <Switch
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/sw_vibration"
                android:layout_row="2"
                android:layout_column="2"
                android:checked="true"
                android:layout_gravity="right" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/img_vibration"
                android:layout_row="2"
                android:layout_column="0"
                android:src="@drawable/ic_vibration"
                android:contentDescription="@string/img_sound_desc"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tv_vibration_text"
                android:id="@+id/tv_vibration"
                android:layout_row="2"
                android:layout_column="1"
                android:labelFor="@id/sw_vibration"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

            <Switch
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/sw_notification"
                android:layout_row="3"
                android:layout_column="2"
                android:checked="false"
                android:layout_gravity="right" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/img_notification"
                android:layout_row="3"
                android:layout_column="0"
                android:src="@drawable/ic_notification"
                android:contentDescription="@string/img_sound_desc"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tv_notification_text"
                android:id="@+id/tv_notification"
                android:layout_row="3"
                android:layout_column="1"
                android:labelFor="@id/sw_notification"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

            <Switch
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/sb_orientation"
                android:layout_row="4"
                android:layout_column="2"
                android:checked="true"
                android:layout_gravity="right" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/img_orientation"
                android:layout_row="4"
                android:layout_column="0"
                android:src="@drawable/ic_orientation"
                android:contentDescription="@string/img_sound_desc"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tv_orientation_text"
                android:id="@+id/tv_orientation"
                android:layout_row="4"
                android:layout_column="1"
                android:labelFor="@id/sb_orientation"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

            <Switch
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/sw_light"
                android:layout_row="5"
                android:layout_column="2"
                android:checked="true"
                android:layout_gravity="right" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/img_light"
                android:layout_row="5"
                android:layout_column="0"
                android:src="@drawable/ic_light"
                android:contentDescription="@string/img_sound_desc"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tv_light_text"
                android:id="@+id/tv_light"
                android:layout_row="5"
                android:layout_column="1"
                android:labelFor="@id/sw_light"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

            <Spinner
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/sp_players"
                android:layout_row="6"
                android:layout_column="2"
                android:spinnerMode="dropdown"
                android:entries="@array/players" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/img_player"
                android:layout_row="6"
                android:layout_column="0"
                android:src="@drawable/ic_player"
                android:contentDescription="@string/img_sound_desc"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tv_players_text"
                android:id="@+id/tv_players"
                android:layout_row="6"
                android:layout_column="1"
                android:labelFor="@id/sp_players"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

            <Spinner
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/sp_themes"
                android:layout_row="7"
                android:layout_column="2"
                android:spinnerMode="dropdown"
                android:entries="@array/themes" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/img_theme"
                android:layout_row="7"
                android:layout_column="0"
                android:src="@drawable/ic_theme"
                android:contentDescription="@string/img_sound_desc"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tv_themes_text"
                android:id="@+id/tv_themes"
                android:layout_row="7"
                android:layout_column="1"
                android:labelFor="@id/sp_themes"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

            <Spinner
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/sp_languages"
                android:layout_row="8"
                android:layout_column="2"
                android:spinnerMode="dropdown"
                android:entries="@array/languages" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/img_language"
                android:layout_row="8"
                android:layout_column="0"
                android:src="@drawable/ic_language"
                android:contentDescription="@string/img_sound_desc"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tv_languages_text"
                android:id="@+id/tv_languages"
                android:layout_row="8"
                android:layout_column="1"
                android:labelFor="@id/sp_languages"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

        </GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/linearLayout"
            android:layout_gravity="center_horizontal|bottom">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_home"
                android:layout_gravity="center|bottom"
                android:contentDescription="@string/ic_home_desc"
                android:src="@drawable/ic_home"
                app:backgroundTint="#840031" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>